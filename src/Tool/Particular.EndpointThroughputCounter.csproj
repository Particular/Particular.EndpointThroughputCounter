<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
    <ToolCommandName>throughput-counter</ToolCommandName>
    <PackAsTool>True</PackAsTool>
    <Description>A tool to measure per-endpoint throughput of an NServiceBus system.</Description>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <LangVersion>10</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Data\Particular.EndpointThroughputCounter.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.CloudWatch" Version="3.7.101.8" />
    <PackageReference Include="Dapper" Version="2.0.123" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="5.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="NuGet.Protocol" Version="6.4.0" />
    <PackageReference Include="RabbitMQ.Client" Version="6.4.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="2.2.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup Label="Separate AWS dependencies so Dependabot PRs don't always have to be rebased">
    <PackageReference Include="AWSSDK.SQS" Version="3.7.100.32" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="public-key.pem" />
    <EmbeddedResource Include="public-key.pem" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Tests" />
  </ItemGroup>

</Project>
